{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist_scripts",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true
  },
  "include": ["scripts/**/*.ts"]
}
