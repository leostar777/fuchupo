{
  "compilerOptions": {
    "target": "ES2019",           // Top-level await を使うなら ES2017以上
    "module": "ESNext",            // モジュールも ESNext
    "moduleResolution": "node",
    "lib": ["ES2019", "DOM"],      // 必要なlib
    "esModuleInterop": true,       // importエラーを防ぐ
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,          // openaiの型チェックをスキップして速く
    "outDir": "dist_scripts"       // 出力先
  },
  "include": ["scripts/**/*.ts"]
}
